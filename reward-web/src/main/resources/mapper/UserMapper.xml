<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cjf.java.dao.UserMapper">
  <resultMap id="BaseResultMap" type="com.cjf.java.entity.UserEntity">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="real_name" jdbcType="VARCHAR" property="realName" />
    <result column="phone_num" jdbcType="VARCHAR" property="phoneNum" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="email" jdbcType="VARCHAR" property="email" />
    <result column="account_id" jdbcType="TINYINT" property="accountId" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="input_time" jdbcType="BIGINT" property="inputTime" />
    <result column="update_time" jdbcType="BIGINT" property="updateTime" />
  </resultMap>
  
  <sql id="Base_Column_List">
    id, real_name, phone_num, password, email, account_id, status, input_time, update_time
  </sql>
  
  <select id="queryRegisterPhoneNumByPhoneNum"
		parameterType="java.lang.String" resultMap="BaseResultMap">
  	SELECT count(*) FROM t_user where phone_num = #{phoneNum}
  </select>
  <insert id="addUser" parameterType="com.cjf.java.entity.UserEntity">
  	INSERT INTO t_user (real_name, phone_num, email, account_id, status, input_time, update_time)
  	VALUES(#{realName},#{phoneNum},#{email},#{accountId},#{status},#{inputTime},#{updateTime})
  </insert>
</mapper>